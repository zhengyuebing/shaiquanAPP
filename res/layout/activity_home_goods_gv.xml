<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/home_goods_gv_activity"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#FFEC8B" >

            <ImageView
                android:id="@+id/home_goods_gv_activity_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:padding="10dp"
                android:src="@drawable/btn_left"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/home_goods_gv_activity_iv_user_name_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/create_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="商品信息" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/home_goods_gv_activity_tv_goods_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="二手商品" />

            <ImageView
                android:id="@+id/home_goods_gv_activity_iv_goods_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/home_goods_gv_activity_tv_goods_name"
                android:src="@drawable/beautiful" />

            <TextView
                android:id="@+id/home_goods_gv_activity_tv_goods_price"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_goods_gv_activity_iv_goods_image"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="  ￥   200" />

            <TextView
                android:id="@+id/home_goods_gv_activity_tv_goods_intro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_goods_gv_activity_tv_goods_price"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息商品详细信息" />

            <TextView
                android:id="@+id/home_goods_gv_activity_tv_user_intro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_goods_gv_activity_tv_goods_intro"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="用户信息" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>