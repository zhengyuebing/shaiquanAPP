<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_goods_gv_activity"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFEC8B" >

        <ImageView
            android:id="@+id/home_menu_activity_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:padding="10dp"
            android:src="@drawable/btn_left"
            android:textSize="20sp" />

         <TextView
             android:id="@+id/home_menu_activity_menu_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="生活" 
             android:textSize="18dp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/home_menu_activity_lv_menu_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:overScrollMode="never" >
    </ListView>

</LinearLayout>