<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:id="@+id/iv_left_head"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true" >

        <jxnu.n433.x3107.Fragment.View.RoundImageView
            android:id="@+id/sliding_userLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/beautiful" />

        <TextView
            android:id="@+id/sliding_userIntroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="\\\hahahahaha\\\"
            android:textColor="#FFF0F5"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sliding_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sliding_userLogo"
            android:layout_alignRight="@+id/sliding_userIntroduction"
            android:text="BlingBling"
            android:textColor="#FFF0F5"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sliding_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_left_head"
        
        android:orientation="vertical">
        
        <LinearLayout
	        android:id="@+id/sliding_menu_list_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:orientation="horizontal">
			
            <ImageView
                android:layout_width="88dp"
	            android:layout_height="68dp"
	            android:src="@drawable/sliding_user"/>
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="  个人中心"
	            android:textColor="#FFF0F5"
	            android:textSize="20dp" />
	
   		 </LinearLayout>

        <LinearLayout
            android:id="@+id/sliding_menu_list_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      
            android:orientation="horizontal" >
	        
             <ImageView
                android:layout_width="88dp"
	            android:layout_height="68dp"
	            android:src="@drawable/collect"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  收藏物品"
                android:textColor="#FFF0F5"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sliding_menu_list_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sliding_menu_list_2"
       
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="88dp"
	            android:layout_height="68dp"
	            android:src="@drawable/goods"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  商品管理"
                android:textColor="#FFF0F5"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sliding_menu_list_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sliding_menu_list_3"
      
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="88dp"
	            android:layout_height="68dp"
	            android:src="@drawable/setup"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  设置 "
                android:textColor="#FFF0F5"
                android:textSize="20dp" />

         
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/sliding_menu_list_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sliding_menu_list_3"
     
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="88dp"
	            android:layout_height="68dp"
	            android:src="@drawable/guanyu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  关于"
                android:textColor="#FFF0F5"
                android:textSize="20dp" />

         
        </LinearLayout>
    </LinearLayout>

    

</RelativeLayout>