<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCFCF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/home_title_personal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#FFEC8B" >

            <ImageView
                android:id="@+id/personal_left_iv_back_personal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/btn_left"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/friend_bg" >

        <TextView
            android:id="@+id/personal_left_tv_name_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="name"
            android:textColor="#000000"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/personal_left_iv_head_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" >

            <jxnu.n433.x3107.Fragment.View.RoundImageView
                android:id="@+id/zdy_image_personal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/beautiful" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/personal_left_layout_sexs_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <TextView
            android:id="@+id/textView1_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="性别"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView1_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/sexs_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1_personal"
            android:layout_toRightOf="@+id/textView1_personal"
            android:paddingLeft="20dp"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_left_layout_site_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView2_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView2_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="所在地"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/sites_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2_personal"
            android:layout_toRightOf="@+id/textView2_personal"
            android:paddingLeft="20dp"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_left_layout_intro_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView3_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView3_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="简介"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/intros_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3_personal"
            android:layout_toRightOf="@+id/textView3_personal"
            android:paddingLeft="20dp"
            android:singleLine="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/personal_left_layout_school_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView4_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView4_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="学校"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/school_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4_personal"
            android:layout_toRightOf="@+id/textView4_personal"
            android:paddingLeft="20dp"
            android:singleLine="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/personal_left_layout_birthday_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView5_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView5_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="生日"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/birthday_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView5_personal"
            android:layout_toRightOf="@+id/textView5_personal"
            android:paddingLeft="20dp"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_left_layout_qq_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView6_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView6_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="QQ"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/qq_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6_personal"
            android:layout_toRightOf="@+id/textView6_personal"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_left_layout_mailbox_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView7_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView7_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="邮箱"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mailbox_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView7_personal"
            android:layout_toRightOf="@+id/textView7_personal"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_left_layout_phonenumber_personal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#EAEAEA" >

        <ImageView
            android:id="@+id/imageView8_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/btn_right" />

        <TextView
            android:id="@+id/textView8_personal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="电话号码"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phonenumber_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView8_personal"
            android:layout_toRightOf="@+id/textView8_personal"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>