<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/register_login_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFEC8B" >

        <ImageView
            android:id="@+id/register_login_left_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:padding="10dp"
            android:src="@drawable/btn_left"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_login_rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_login_title" >

        <EditText
            android:id="@+id/login_user_edit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_below="@+id/login_top_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_selector"
            android:hint="学号"
            android:textColor="#aaaaaa"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_passwd_edit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_below="@+id/login_user_edit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_selector"
            android:paddingRight="35dp"
            android:password="true"
            android:singleLine="true"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="登录密码"
            android:textColor="#aaaaaa"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/login_password_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/login_passwd_edit"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pointer_spot_anchor" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_login_rlayout"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/register_forget_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/login_forget_passwd_bg"
            android:paddingTop="10dp"
            android:text="忘记密码"
            android:textColor="#aaaaaa" />

        <Button
            android:id="@+id/register_login_login_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_login_selector"
            android:text="登录"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>