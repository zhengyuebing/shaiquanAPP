<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/register_log_rl"
        android:layout_width="match_parent"
        android:layout_height="240dp" 
        >

        <Button
            android:id="@+id/register_log_rl_login_btn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/main_login_selector"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/register_log_rl_regist_btn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/register_log_rl_login_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:background="@drawable/main_regist_selector"
            android:gravity="center"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="15dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/register_log_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/register_log_rl"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:src="@drawable/shengzi" />

</RelativeLayout>