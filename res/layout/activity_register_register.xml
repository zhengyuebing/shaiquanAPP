<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/register_register_login_title"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#FFEC8B" >

                <ImageView
                    android:id="@+id/register_register_login_left_iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:padding="10dp"
                    android:src="@drawable/btn_left"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/register_register_news_rlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_register_login_title" >

                <EditText
                    android:id="@+id/register_login_username_edit"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/login_selector"
                    android:hint="用户名"
                    android:singleLine="true"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/register_login_userpassword_edit"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/register_login_username_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/login_selector"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="登录密码"
                    android:paddingRight="35dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/user_password_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/register_login_userpassword_edit"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pointer_spot_anchor" />

                <EditText
                    android:id="@+id/register_login_studentnumber_edit"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/register_login_userpassword_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/login_selector"
                    android:hint="学号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/register_login_studentnbpassword_edit"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/register_login_studentnumber_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/login_selector"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="学号密码"
                    android:paddingRight="35dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/student_number_password_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/register_login_studentnbpassword_edit"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pointer_spot_anchor" />

                <EditText
                    android:id="@+id/register_login_school_edit"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/register_login_studentnbpassword_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/login_selector"
                    android:hint="学校"
                    android:singleLine="true"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/register_login_school_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/register_login_Verification_edit"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:background="@drawable/login_selector"
                        android:hint="验证码"
                        android:singleLine="true"
                        android:textColor="#aaaaaa"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/vc_image_register_login_Verification_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="InefficientWeight" />

                    <Button
                        android:id="@+id/vc_shuaixi_register_login_Verification_edit"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="刷新验证码"
                        android:textColor="#7f7f7f"
                        android:textSize="12sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/register_register_log_rl_regist_btn_next"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/main_regist_selector"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>