<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/seek_title"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#FFEC8B" >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:padding="10dp"
                    android:src="@drawable/btn_left"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_seek_other"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_bar_edit_bg"
                    android:ems="10"
                    android:hint="请输入关键字"
                    android:singleLine="true"
                    android:textColor="#000" >

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/iv_seek_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:src="@drawable/search_bar_icon_normal"
                    android:textSize="20sp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_seek_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 >
            </ListView>

        </LinearLayout>


</RelativeLayout>