<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_menu_class_list_adapter_iv_share_goods_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/share_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_menu_class_list_adapter_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="2小时前"
                android:textColor="#C6C6C6"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/home_menu_class_list_adapter_tv_share_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="绝对正品，低价转手绝对正品，低价转手绝对正品，低价转手绝对正品，低价转手"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>